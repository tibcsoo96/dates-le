{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "outDir": "dist",
        "lib": [
            "ES2020"
        ],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": true,
        "skipLibCheck": true,
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules",
        ".vscode-test",
        "src/__mocks__/**/*",
        "vitest.config.ts",
        "**/*.test.ts",
        "**/*.bench.ts",
        "sample/**/*",
        "scripts/**/*"
    ]
}
